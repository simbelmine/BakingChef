<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:minHeight="@dimen/widget_listview_item_height"
    android:weightSum="2"
    android:id="@+id/widgetItemContainer"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/widget_item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/recipe_video_720x340"
        />

    <TextView android:id="@+id/widget_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/cards_padding"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:textColor="@color/main_txt_color"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:background="@color/colorPrimary"
        tools:text = "Recipe Name"/>

</FrameLayout>